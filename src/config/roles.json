{
    "roles": {
        "user": {
            "label": "Normal User",
            "level": 1,
            "permissions": [
                "transaction_create",
                "transaction_view_own",
                "transaction_reply",
                "transaction_upload_attachment",
                "transaction_comment",
                "transaction_search_basic",
                "profile_update_self"
            ]
        },
        "admin": {
            "label": "Department Admin",
            "level": 2,
            "inherits": [
                "user"
            ],
            "permissions": [
                "view_department_transactions",
                "manage_department_users",
                "assign_department_transactions",
                "view_department_reports"
            ]
        },
        "super_admin": {
            "label": "Super Admin",
            "level": 3,
            "inherits": [
                "admin"
            ],
            "permissions": [
                "manage_users",
                "manage_departments",
                "view_all_transactions",
                "manage_roles",
                "system_settings",
                "view_global_reports",
                "view_audit_logs",
                "restore_transactions"
            ]
        }
    }
}